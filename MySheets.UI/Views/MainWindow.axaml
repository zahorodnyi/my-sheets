<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="MySheets.UI.Views.MainWindow"
        xmlns:vm="using:MySheets.UI.ViewModels"
        x:DataType="vm:MainWindowViewModel"
        Title="MySheets.UI">

    <Design.DataContext>
        <vm:MainWindowViewModel/>
    </Design.DataContext>

    <ScrollViewer>
        <ItemsControl ItemsSource="{Binding Rows}">
            <ItemsControl.ItemTemplate>
                <DataTemplate x:DataType="vm:RowViewModel">
                    
                    <Grid ColumnDefinitions="40,*">
                        
                        <Border Grid.Column="0" 
                                Background="#E0E0E0"
                                BorderBrush="#C0C0C0"
                                BorderThickness="0 0 1 1">
                            <TextBlock Text="{Binding Cells[0].Row}" 
                                       HorizontalAlignment="Center" 
                                       VerticalAlignment="Center" 
                                       Margin="2" />
                        </Border>

                        <ItemsControl Grid.Column="1" ItemsSource="{Binding Cells}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <StackPanel Orientation="Horizontal"/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate x:DataType="vm:CellViewModel">
                                    <Border BorderBrush="#C0C0C0" 
                                            BorderThickness="0 0 1 1" 
                                            Width="120" 
                                            Height="25">
                                        <TextBox Text="{Binding Expression}" 
                                                 ToolTip.Tip="{Binding Value}" 
                                                 AcceptsReturn="False" 
                                                 Padding="2" />
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </Grid>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </ScrollViewer>
</Window>